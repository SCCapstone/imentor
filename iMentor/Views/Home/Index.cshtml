<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html ng-app="app">
    <head>
        <title>iMentor</title>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="IE=9, chrome=1" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate" />
        <meta http-equiv="Pragma" content="no-cache" />
        <script type="text/javascript" src="//hangoutsapi.talkgadget.google.com/talkgadget/apps/gadgets/js/rpc.js"></script>@*These do not break the app*@
        <script type="text/javascript" src="//hangoutsapi.talkgadget.google.com/hangouts/api/hangout.js?v=1.0"></script>
        <script src="https://apis.google.com/js/client.js"></script>
      

       
        @Styles.Render("~/bundles/content")
      
        @Styles.Render("~/bundles/content/ngMaterial")
    </head>
    <body ng-controller="indexCtrl" ng-cloak>
        <div>
            <div id="main-header" style="text-align:center;">
                <nav class="navbar navbar-default navbar-fixed-top" >
                    <div class="container">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <a class="navbar-brand" href="#/">iMentor</a>
                        </div>

                        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                            <ul class="nav navbar-nav">
                                <li><a href="" ng-click="goToHome()"><i class="glyphicon glyphicon-home"></i> Home </a></li>
                                <li><a href="" ng-click="goToCalendar()"><i class="glyphicon glyphicon-calendar"></i> Calendar</a></li>
                                <li class="dropdown">
                                    <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="glyphicon glyphicon-wrench"></i> Manage <span class="caret"></span></a>
                                    <ul class="dropdown-menu">
                                        <li><a href="" ng-click="goToManageUsers()"><i class="glyphicon glyphicon-user"></i> Users </a></li>
                                        <li><a href="" ng-click="goToManageListings()"><i class="glyphicon glyphicon-th-list"></i> Listings</a></li>
                                    </ul>
                                </li>
                            </ul>

                            @Html.Partial("_LoginPartial")
                        </div>
                    </div>
                </nav>
            </div>


            <div id="main-content">

                <div class="row content" ng-show="user.Id > 0">
                    <div class="col-sm-12">
                        <md-content>
                            <md-toolbar md-scroll-shrink>
                                <div class="md-toolbar-tools" style="background:#a7ffeb;color:#004d40;border:2px;">
                                    <div>
                                        Upcoming Events
                                    </div>
                                </div>
                            </md-toolbar>
                        </md-content>
                    </div>
                </div>

                <div ng-view class="ngview-fade">
                </div>
            </div>


            <footer class="container-fluid pull-right">
                <p>iMentor 2016</p>
            </footer>
        </div>


        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/angular")
        
        @Scripts.Render("~/bundles/app")
        @Scripts.Render("~/bundles/appServices")
        @Scripts.Render("~/bundles/appControllers")
        @Scripts.Render("~/bundles/appDirectives")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/moment")
        @Scripts.Render("~/bundles/fullcalendar")
    </body>
</html>
