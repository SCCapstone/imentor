
<div class="ngview-wrapper" ng-show="user.RoleId == 1">
    <div class="ngview-body" style="padding-top:25px;background:#f2f2f2;color:black;">
        <div class="container-fluid" style="">
            <div class="col-sm-12" style="padding-bottom:10px;">
                <md-grid-list md-cols="10" md-cols-sm="5" md-cols-md="5" md-cols-gt-md="5"
                              md-row-height-gt-md="2:2" md-row-height="4:3"
                              md-gutter="20px" md-gutter-gt-sm="20px">


                    <md-grid-tile class="no-animate" style="cursor:pointer;"
                                  ng-repeat="tile in tiles"
                                  md-rowspan="{{tile.span.row}}"
                                  md-colspan="{{tile.span.col}}"
                                  md-colspan-md="1"
                                  ng-click="joinHangout(tile)"
                                  ng-style="{'background': tile.background, 'font-size': tile.fontSize}">

                        <div class="thick" style="text-align:center;">
                            <md-grid-tile-header ng-show="tile.header.localeCompare('') != 0"><h3>{{tile.header}}</h3></md-grid-tile-header>
                            <div>{{tile.title}}</div>
                            <div style="font-size:12px">{{tile.startDate}}</div>
                            <div style="font-size:12px">{{tile.startTime}}</div>

                        </div>
                    </md-grid-tile>
                </md-grid-list>

                <div ng-show="currentUserListings.length == 0">
                    <div class="col-lg-12" style="text-align:center">
                        <img src="~/Img/sassypuppy.gif" alt="Sassy Puppy">
                    </div>
                    <div class="col-sm-12 ">
                        <div class="thick italic georgia" style="font-size:35px;text-align:center;height:300px;padding:90px;">You are not assigned to any listings at this time</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

